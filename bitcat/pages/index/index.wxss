/**index.wxss**/
.header {
  padding-top: 70rpx;overflow: hidden;
}
.userinfo-avatar {
  float: left;
  width: 80rpx;
  height: 80rpx;
  margin: 0 0 0 45rpx;
  border-radius: 50%;
}
.page-title{
  float: left;
  margin-left: 20rpx;
  font-size: 52rpx;line-height: 80rpx;
}
.page-nav{
  float: right;
  width: 320rpx;
}
.page-nav-news{
  float: left;
  width: 65rpx;
}
.page-nav-friends{
  float: left;
  width: 65rpx;margin-left: 45rpx;
}
.page-nav-ground{
  float: left;
  width: 65rpx;margin-left: 45rpx;
}
.page-nav-icon{
  display: block;
  width: 65rpx;height: 60rpx;
}
.page-nav-name{
  font-size: 22rpx;line-height: 40rpx;text-align: center;color: #4d4d4d;
}
.main{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.cat-nocat{
  margin-top: 160rpx;
  height: 221rpx;
}
.text-nocat{
  width: 466rpx;margin: 48rpx auto 0;
  font-size: 48rpx;line-height: 68rpx;text-align: center;font-weight: bold;
}
.main_cats{
  box-sizing: border-box;
  width: 750rpx;padding-left: 45rpx;
}
.card_cat{
  float: left;
  background-color: #dfdffb;border-radius: 12rpx;
  width: 310rpx;height: 460rpx;margin: 40rpx 40rpx 0 0;
}
.card_cat .cat_img{
  width: 310rpx;height: 260rpx;
}
.card_cat .cat_name{
  width: 100%;
  font:30rpx/1.2 "";text-align: center;
}
.card_cat .cat_gender{
  width: 30rpx;height: 30rpx;
  vertical-align: top;
}
.card_cat .cat_level{
  width: 100%;text-align: center;
}
.card_cat .star{
  width: 29rpx;height: 27rpx;
}
.btn-normal{
  width: 330rpx;height: 80rpx;margin: 40rpx auto 0;
  background: #ffb600;border-radius: 40rpx;
  font-size: 32rpx;line-height: 80rpx;text-align: center;color: #fff;font-weight: bold;
}
.btn-disabled{
  background-color: #EBEBEB;
}
.tips{
  margin-top: 30rpx;
  font-size: 24rpx;line-height: 1;color: #787f84;
}
.tips-em{
  color: #f72e6e;
}